{
  "manifest_version": 3,
  "name": "Procrastination Blocker",
  "version": "0.1.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["Content.js"]
    }
  ],
  "icons": { "48": "icon48.png", "128": "icon128.png" },
  "action": {
    "default_popup": "Popup.html",
    "default_title": "Procrastination Blocker"
  },
  "host_permissions": [
    "*://*/*",
    "https://www.youtube.com/*",
    "https://www.facebook.com/*",
    "https://www.netflix.com/*"
  ],
  "permissions": ["storage"]
}
